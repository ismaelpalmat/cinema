<%= form_with(model: @movie, local: true) do |form| %>
  <div class="container mt-4">
    <h2>Crear una nueva película</h2>
    <div class="form-group">
      <%= form.label :name, "Nombre de la película", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :synopsis, "Sinopsis", class: "form-label" %>
      <%= form.text_area :synopsis, class: "form-control", rows: 4 %>
    </div>

    <div class="form-group">
      <%= form.label :director, "Director", class: "form-label" %>
      <%= form.text_field :director, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Ingresar película", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>